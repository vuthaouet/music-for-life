<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audio_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/music_img_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30.85dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/music_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pepe_the_frog" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/music_img_container"
        android:text="nghệ sĩ Pepe"
        android:textColor="#0c0c0d" />

    <TextView
        android:id="@+id/music_file_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_file_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/music_img_container"
        android:textColor="#565659" />


</RelativeLayout>