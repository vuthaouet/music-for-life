<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audio_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bd33aa"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/music_img_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/music_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pepe_the_frog" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/playing"
        android:layout_toEndOf="@id/music_img_container"
        android:text="pepe bu cac"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/music_file_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_file_name"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/playing"
        android:layout_toEndOf="@id/music_img_container"
        android:text="pepe artist"
        android:textColor="#d1d1d1" />

    <ImageView
        android:id="@+id/playing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_bar_chart" />

</RelativeLayout> 