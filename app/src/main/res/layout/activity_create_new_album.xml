<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewAlbum"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="80dp"
        android:color="#ffffff"
        android:text="Tên album"
        tools:text="Tên album"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/editTextAlbumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Nhập tên của album"
        android:padding="10dp"
        android:background="@drawable/background_border"
        />

    <Button
        android:id="@+id/buttonAlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAlbumName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Thêm album mới"
        android:background="@drawable/random_btn_purple"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:radius="12dp"/>
</RelativeLayout>