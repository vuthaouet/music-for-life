<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Register"
        android:textColor="#ffff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/textPersonNameReg"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:hint="Your name"
        android:textColorHint="#b1b1b3"/>

    <EditText
        android:textColor="#fff"
        android:id="@+id/textEmailAddressReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPersonNameReg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:hint="Your Email"
        android:textColorHint="#b1b1b3"/>

    <EditText
        android:textColor="#fff"
        android:id="@+id/textPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmailAddressReg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:inputType="textPassword"
        android:hint="Your Password"
        android:textColorHint="#b1b1b3"/>

    <EditText
        android:textColor="#fff"
        android:id="@+id/textPassword2Reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPasswordReg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:inputType="textPassword"
        android:hint="Your Password Again"
        android:textColorHint="#b1b1b3"/>



    <Button
        android:id="@+id/register_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_2"
        android:layout_above="@+id/login_btn_reg"
        android:textColor="#fff"
        android:text="Sign Up"/>


    <Button
        android:id="@+id/login_btn_reg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_2"
        android:textColor="#fff"
        android:text="Log In"/>

    <ProgressBar
        android:id="@+id/progressBar_reg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:translationZ="100dp"/>

</RelativeLayout>