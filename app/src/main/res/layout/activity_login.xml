<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Login"
        android:textColor="#ffff"
        android:textSize="30sp" />

    <EditText
        android:textColor="#fff"
        android:id="@+id/textEmailAddressLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:hint="Your email"
        android:textColorHint="#b1b1b3"/>

    <EditText
        android:textColor="#fff"
        android:id="@+id/textPasswordLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmailAddressLog"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#fff"
        android:foregroundTint="#fff"
        android:hint="Your Password"
        android:inputType="textPassword"
        android:textColorHint="#b1b1b3"/>

    <Button
        android:id="@+id/login_btn_log"
        android:layout_below="@+id/textPasswordLog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn"
        android:text="Login"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_log"
        android:text="or"
        android:gravity="center_horizontal"
        android:textColor="#d7d7d9"
        android:textSize="18sp"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/loginGG_btn_log"
        android:layout_below="@+id/login_btn_log"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn"
        android:text="Login with google"/>

    <TextView
        android:id="@+id/forgotPassLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_btn_log"
        android:textColor="#d7d7d9"
        android:gravity="center_horizontal"
        android:text="Forget Password ?"/>


    <Button
        android:id="@+id/register_btn_log"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn_2"
        android:textColor="#fff"
        android:text="Sign Up"/>

    <ProgressBar
        android:id="@+id/progressBar_log"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:translationZ="100dp"/>

</RelativeLayout>